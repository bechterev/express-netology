<form method="POST" enctype = "multipart/form-data">
    <div class="form-group">
        <label for="exampleInputTitle">Title</label>
        <input type="text" class="form-control" id="title" placeholder="Title book" name="title" value="<%= book.title || '' %>">
        <small id="titleHelp" class="form-text text-muted">Name required field</small>
    </div>
    <div class="form-group">
        <label for="exampleInputDescription">Description</label>
        <input type="text" class="form-control" id="description" name="description" placeholder="Description book" value="<%= book.description || '' %>">
    </div>
    <div class="form-group">
        <label for="exampleInputAuthors">Authors</label>
        <input type="text" class="form-control" id="authors" name="authors" placeholder="Authors book" value="<%= book.authors || '' %>">
    </div>
    <div class="form-group">
        <label for="exampleInputFavorite">Favorite</label>
        <input type="text" class="form-control" id="favorite" name="favorite" placeholder="Favorite" value="<%= book.favorite  %>">
    </div>
    <div class="form-group">
        <label for="exampleInputFavorite">File cover</label>
        <input type="file" class="form-control-file" name="filecover" id="exampleFormControlFile1">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>